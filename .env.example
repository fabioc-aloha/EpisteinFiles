# Environment Configuration
# Copy to .env and fill in your values

# App
DEBUG=true

# Database (local Docker)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/epstein
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/epstein

# Azure Blob Storage (optional for local dev)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER=documents

# Azure Queue Storage (optional for local dev)
AZURE_QUEUE_CONNECTION_STRING=
AZURE_QUEUE_NAME=processing-jobs

# NLP Models
SPACY_MODEL=en_core_web_sm
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIM=384

# Processing
CHUNK_SIZE=512
CHUNK_OVERLAP=64
MAX_CONCURRENT_JOBS=4
